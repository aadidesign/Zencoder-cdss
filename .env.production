# Production Environment Configuration for CDSS

# Environment
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# Database URLs
REDIS_URL=redis://:your_redis_password@redis:6379
REDIS_PASSWORD=your_secure_redis_password_here

# API Keys (REQUIRED - Replace with actual keys)
PUBMED_API_KEY=your_pubmed_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Model Configuration
PUBMEDBERT_MODEL=microsoft/BiomedNLP-PubMedBERT-base-uncased-abstract-fulltext
SENTENCE_TRANSFORMER_MODEL=all-MiniLM-L6-v2
MODELS_CACHE_DIR=/app/models

# Vector Database
VECTOR_DB_PATH=/app/data/vector_db
VECTOR_DB_COLLECTION_NAME=clinical_papers

# PubMed API Settings
MAX_PAPERS_PER_QUERY=20
PUBMED_RATE_LIMIT=3
PUBMED_RETRIES=3

# RAG Configuration
RAG_TOP_K_RESULTS=10
RAG_SIMILARITY_THRESHOLD=0.7
RAG_MAX_CONTEXT_LENGTH=4000

# Security
SECRET_KEY=your_very_secure_secret_key_here_change_this
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# Monitoring
PROMETHEUS_ENABLED=true
GRAFANA_PASSWORD=secure_grafana_password

# SSL/TLS (for HTTPS)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup and Data Persistence
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
DATA_RETENTION_DAYS=90

# Performance Tuning
WORKER_PROCESSES=4
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT=300

# Email Configuration (for alerts)
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USERNAME=alerts@your-domain.com
SMTP_PASSWORD=your_email_password
ALERT_EMAIL_TO=admin@your-domain.com

# Feature Flags
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_AUDIT_LOGGING=true
ENABLE_METRICS=true