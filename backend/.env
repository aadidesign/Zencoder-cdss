# API Configuration
PUBMED_EMAIL=your.email@example.com
PUBMED_API_KEY=your_pubmed_api_key_here

# OpenAI (Optional - only if you want to use GPT models)
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
REDIS_URL=redis://localhost:6379/0
CHROMA_PERSIST_DIRECTORY=/app/data/chroma_db

# Model Configuration
PUBMEDBERT_MODEL=microsoft/BiomedNLP-PubMedBERT-base-uncased-abstract-fulltext
SENTENCE_TRANSFORMER_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,*.githubpreview.dev,*.github.dev
ALLOWED_ORIGINS=http://localhost:3000,https://*.githubpreview.dev,https://*.github.dev

# Features
MAX_PAPERS_PER_QUERY=20
VECTOR_DB_COLLECTION_NAME=clinical_papers
ENABLE_MONITORING=True
